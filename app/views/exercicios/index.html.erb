    <th></th>
  </tr>

<% @exercicios.each do |exercicio| %>
  <tr>
    <td><%= exercicio.nome %></td>
    <td><%= exercicio.instrucao %></td>
    <td><%= exercicio.restricao %></td>
    <td><%= exercicio.indicacao %></td>
    <td><%= exercicio.ativo %></td>
    <td><%= exercicio.membros.count  %></td>
    
    
    <td><%= link_to 'Show', exercicio %></td>
    <td><%= link_to 'Edit', edit_exercicio_path(exercicio) %></td>
    <td><%= link_to 'Destroy', exercicio, method: :delete, data: { confirm: 'Excluir o registro?' } %></td>
  </tr>
  
<% end %>
</table>

