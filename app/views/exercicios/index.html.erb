<h1><%=t :hello_world %></h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Instrucao</th>
    <th>Restricao</th>
    <th>Indicacao</th>
    <th>Ativo</th>
    <th>Partescorpo</th>
    <th></th>
