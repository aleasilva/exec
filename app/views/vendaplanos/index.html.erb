<%- model_class = Vendaplano -%>

<%= grid(@vendaplanos_grid,
	allow_showing_all_records:  false,
	show_filters: :when_filtered) do |g|

	#
	g.column name:  'Id', attribute: 'aluno_id' do |venPlano|
		[venPlano.aluno.idacademia,{style: 'max-width:45px;'}]
	end

	#
	g.column name:  'Aluno', attribute: 'aluno_id' do |venPlano|
		venPlano.aluno.nome
	end

	#
	g.column name:  'Plano', attribute: 'tabelaplano_id' do |venPlano|
		venPlano.tabelaplano.nome
	end

	#
	g.column name:  'Pgto' , attribute: 'nuDia' do |venPlano|
		[venPlano.nuDia, {style: 'max-width:10px;'}]
	end

	#
	g.column name:  'Vencimento' , attribute: 'dtPagto' do |venPlano|
		[l(venPlano.dtPagto), {style: 'max-width:170px;'}]
	end

	#
	g.column name:  'Valor', attribute: 'tabelaplano_id' do |venPlano|
		number_to_currency_br(venPlano.valorParcela)
	end
	#
	g.column name:  'Parcela', attribute: 'tabelaplano_id' do |venPlano|
		[venPlano.nuParcela.to_s + " de " +venPlano.qtdParcela.to_s,
		{style: 'max-width:10px;'}]
	end
  #
	g.column   do |venPlano|
		[link_to(image_tag("btnOperation/form_show.png", :alt => "Visualizar") , venPlano),
						{style: 'background-color: rgb(255, 255, 204); max-width:30px;'}]
	end
  #
	g.column   do |venPlano|
		[link_to(image_tag("btnOperation/form_edit.png", :alt => "Alterar."), edit_vendaplano_path(venPlano)),
						{style: 'background-color: rgb(255, 255, 204); max-width:30px;'}]
	end
  #
	g.column   do |venPlano|
		[link_to(image_tag("btnOperation/form_delete.png", :alt => "Excluir."),venPlano,
						  method: :delete, data: { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Confirma a exclusÃ£o?')) }),style: 'background-color: rgb(255, 255, 204); max-width:30px;']

	end

end -%>

<%=link_to('Nova venda', new_vendaplano_path,:class => 'btn btn-primary'  )%>
