<%- model_class = Atividade -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @atividade.nome %></dd>
  <dt><strong>Instrução:</strong></dt>
  <dd><%= @atividade.instrucao %></dd>
  <dt><strong>Indicação:</strong></dt>
  <dd><%= @atividade.indicacao %></dd>
  <dt><strong>Restrição:</strong></dt>
  <dd><%= @atividade.restricao %></dd>
  <dt><strong>Observação:</strong></dt>
  <dd><%= @atividade.observacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @atividade.tipo ='A' ? 'Aeróbico': 'Muscular' %></dd>
</dl>

<div class="panel-footer">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              atividades_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_atividade_path(@atividade), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              atividade_path(@atividade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
