<%- model_class = Atividade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @atividade.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instrucao) %>:</strong></dt>
  <dd><%= @atividade.instrucao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indicacao) %>:</strong></dt>
  <dd><%= @atividade.indicacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:restricao) %>:</strong></dt>
  <dd><%= @atividade.restricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacao) %>:</strong></dt>
  <dd><%= @atividade.observacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @atividade.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ativo) %>:</strong></dt>
  <dd><%= @atividade.ativo %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              atividades_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_atividade_path(@atividade), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              atividade_path(@atividade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
