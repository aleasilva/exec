<%- model_class = Atividade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= grid(@atividades_grid, 
	allow_showing_all_records:  false,
	show_filters: :when_filtered) do |g|
	
	#g.blank_slate  do
    #	content_tag :div, "Não existem registros para serem mostrados.", class: 'well'
  	#end
	
	g.last_row do |number_of_columns|
		content_tag(:tr,
		content_tag(:td, link_to('Nova Atividade', new_atividade_path,:class => 'btn btn-primary'  ),colspan: 5), class: 'last-row')
	end
	
	g.column name:  'Nome', attribute: 'nome'  do |atividade|
		atividade.nome
	end
	
	g.column name:  'Tipo', attribute: 'tipo',
		custom_filter: {'Aeróbico' => 'A', 'Muscular' => 'M'}

	g.column   do |atividade|
		link_to( image_tag("btnOperation/form_show.png", :alt => "Visualizar") , atividade)
	end
	
	g.column   do |atividade|
		link_to(image_tag("btnOperation/form_edit.png", :alt => "Alterar."), edit_atividade_path(atividade))
	end
	
	g.column   do |atividade|
		link_to image_tag("btnOperation/form_delete.png",
						   :alt => "Excluir."), atividade,
						    method: :delete, data: { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Are you sure?')) }
	end
end %>