<h2>Sign up 333</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>
  
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  
  <%Group.all.each do |grupo|%>
	<%= check_box_tag "user[group_ids[]", grupo.id, @user.groups.include?(grupo)%>
	<%= label_tag :grupo_ids, grupo.nome%>
  <%end%>

  <% Rule.all.each do |regra|%>
  	<%= check_box_tag "user[rule_ids][]", regra.id, @user.rules.include?(regra) %>
	<%= label_tag :regra_ids, regra.nome %>
  <%end%>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
