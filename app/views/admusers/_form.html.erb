<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

	<div class="form-group">
		<label for="txtNome" class="col-sm-2 control-label">Nome</label>
		<div class="col-sm-10">
			<%= f.text_field 	:name,
												:id=>"txtNome",
												:autofocus => true,
												:class=>"form-control"%>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :email,:for=>"txtEmail", :class=>"col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.text_field :name, :id=>"txtEmail", :class=>"form-control" %>
		</div>
	</div>

	<div class="panel-footer">
		<%= f.submit nil, :class => 'btn btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")), alunos_path, :class => 'btn btn-warning' %>
	</div>

<% end %>
