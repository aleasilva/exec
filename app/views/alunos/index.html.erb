<%- model_class = Aluno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= grid(@alunos_grid, 
	allow_showing_all_records:  false,
	show_filters: :when_filtered) do |g|
	
	g.last_row do |number_of_columns|
		content_tag(:tr,
		content_tag(:td, link_to('Novo Aluno', new_aluno_path,:class => 'btn btn-primary'  ),colspan: 9), class: 'last-row')
	end	  
  
	g.column name:  'CÃ³d.Aluno', attribute: 'idAcademia' do |aluno|
		aluno.idAcademia
	end
	
	g.column name:  'Nome', attribute: 'nome'  do |aluno|
		aluno.nome
	end

	g.column   do |aluno|
		link_to( image_tag("btnOperation/form_show.png", :alt => "Visualizar") , aluno)
	end
	
	g.column   do |aluno|
		link_to(image_tag("btnOperation/form_edit.png", :alt => "Alterar."), edit_aluno_path(aluno))
	end
	
	g.column   do |aluno|
		link_to image_tag("btnOperation/form_delete.png", :alt => "Excluir."), 
						  aluno, 
						  method: :delete, data: { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Are you sure?')) }
	end
end %>