<%= form_for @aluno, :html => { :class => 'form-horizontal' } do |f| %>

<div class="control-group">
	<p class="control-label">Id. Acadêmia</p>
	<div class="controls">
		<%= f.text_field :idAcademia, :id=>'only_number', :alt=>"idAcademia", :onkeypress=> onlyTextNumber %>
	</div>
</div>
<div class="control-group">
	<%= f.label :nome, :class => 'control-label' %>
	<div class="controls">
		<%= f.text_field :nome, :class => 'text_field' %>
	</div>
</div>
<div class="control-group">
	<%= f.label :nascimento, :class => 'control-label' %>
	<div class="controls" >
		<%= f.text_field :nascimento,:value => l(@aluno.nascimento == nil ? Date.today : @aluno.nascimento) ,:id => 'datepicker'%>
	</div>
</div>
<div class="control-group">
	<%= f.label :sexo, :class => 'control-label' %>
	<div class="controls">
		<%= f.select(:sexo, [['Feminino', 'f'], ['Masculino', 'm']]) %>
	</div>
</div>
<div class="control-group">
	<%= f.label :email, :class => 'control-label' %>
	<div class="controls" >
		<%= f.text_field :email, :class => 'text_field'%>
	</div>
</div>
<div class="control-group">
	<%= f.label :medicamentos, :class => 'control-label' %>
	<div class="controls">
		<%= f.text_area :medicamento, :class => 'text_area', :rows => "3" %>
	</div>
</div>
<div class="control-group">
	<%= f.label "Doenças", :class => 'control-label' %>
	<div class="controls">
		<%= f.text_area :doenca, :class => 'text_area', :rows => "3" %>
	</div>
</div>
<div class="control-group">
	<%= f.label "Alergias", :class => 'control-label' %>
	<div class="controls">
		<%= f.text_area :alergia, :class => 'text_area', :rows => "3" %>
	</div>
</div>
<div class="control-group">
	<%= f.label :dores, :class => 'control-label' %>
	<div class="controls">
		<%= f.text_area :dor, :class => 'text_area', :rows => "3" %>
	</div>
</div>
<div class="control-group">
	<%= f.label "Observação", :class => 'control-label' %>
	<div class="controls">
		<%= f.text_area :observacao, :class => 'text_area', :rows => "3" %>
	</div>
</div>
<div class="control-group">
	<%= f.label "Último treino", :class => 'control-label' %>
	<div class="controls">
		<%= f.text_field :last_treino, :class => 'text_area', :rows => "3" %>
	</div>
</div>

<div class="control-group">
	<%= f.label "Dia(s) aula(s)", :class => 'control-label' %>
	<div class="controls">
		<% Diasemana.all.each do |iDia| %>
		<%= check_box_tag 'aluno[diasemana_ids][]', iDia.id, @aluno.diasemanas.include?(iDia)  %>
		<%= iDia.nome %>
		<% end %>
	</div>
</div>

<div class="form-actions">
	<%= f.submit nil, :class => 'btn btn-primary' %>
	<%= link_to t('.cancel', :default => t("helpers.links.cancel")), alunos_path, :class => 'btn btn-warning' %>
</div>
<% end %>