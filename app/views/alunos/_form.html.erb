<%= form_for @aluno, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Id Acadêmia", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :idAcademia, :class => 'text_field' %>
    </div>
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
    <%= f.label :medicamentos, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :medicamentos, :class => 'textarea' %>
    </div>
    <%= f.label "Doenças", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :doenca, :class => 'textarea' %>
    </div>
    <%= f.label "Alergias", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :alergia, :class => 'textarea' %>
    </div>
    <%= f.label :dores, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :dores, :class => 'textarea' %>
    </div>
    <%= f.label "Observação", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :observacao, :class => 'textarea' %>
    </div>
    <%= f.label :nascimento, :class => 'control-label' %>
    <div class="controls" >
      <%= f.text_field :nascimento,:value => l(@aluno.nascimento) ,:id => 'datepicker'%>
    </div>
    <%= f.label :sexo, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :sexo, ([["Feminino", "f"], ["Masculino", "t"]]), :class => 'text_field' %>
    </div>
	<%= f.label "Dia(s) de aula", :class => 'control-label' %>
	<div class="controls">
		<% Diasemana.all.each do |iDia| %>
			<%= check_box_tag 'aluno[diasemana_ids][]', iDia.id, @aluno.diasemanas.include?(iDia)  %>
			<%= iDia.nome %>
		<% end %>
	</div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), alunos_path, :class => 'btn' %>
  </div>
<% end %>
