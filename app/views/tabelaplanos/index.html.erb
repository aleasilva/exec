<%- model_class = Tabelaplano -%>

<%= grid(@tabelaplanos_grid,
	allow_showing_all_records:  false,
	show_filters: :when_filtered) do |g|

	#
	g.column name:  'Tipo do Plano', attribute: 'nome' do |tipoPlano|
		tipoPlano.nome
	end

  #
	g.column   do |tipoPlano|
		link_to(image_tag("btnOperation/form_show.png", :alt => "Visualizar") , tipoPlano)
	end
  #
	g.column   do |tipoPlano|
		link_to(image_tag("btnOperation/form_edit.png", :alt => "Alterar."), edit_tabelaplano_path(tipoPlano))
	end
  #
	g.column   do |tipoPlano|
		link_to image_tag("btnOperation/form_delete.png", :alt => "Excluir."),tipoPlano,
						  method: :delete, data: { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Are you sure?')) }
	end

end %>
<%=link_to('Novo Tabela Plano', new_tabelaplano_path,:class => 'btn btn-primary'  )%>
