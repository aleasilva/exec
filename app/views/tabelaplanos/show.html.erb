<%- model_class = Tabelaplano -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @tabelaplano.nome %></dd>
  <dt><strong>Quantida de parcelas:</strong></dt>
  <dd><%= @tabelaplano.qtd_max_parcela%></dd>
  <dt><strong>Valor da parcela:</strong></dt>
  <dd><%= number_to_currency_br(@tabelaplano.valor)%></dd>
</dl>

<div class="panel-footer">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tabelaplanos_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tabelaplano_path(@tabelaplano), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tabelaplano_path(@tabelaplano),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
