<strong>Editando Treino</strong>

<%= form_for(@treino) do |f| %>
<p>
	<div class="field">
		<%= f.label "id" %>
		<%= f.text_area :id %>
	</div>
</p>

<p>
	<div class="field">
		<%= f.label "Criação:" %>
		<%= f.date_select :criacao %>
	</div>
</p>
<p>
	<div class="field">
		<%= f.label "Validade:" %>
		<%= f.date_select :validade %>
	</div>
</p>
<p>
	<div class="field">
		<%= f.label "Observação:" %>
		<br>
		<%= f.text_area :observacao %>
	</div>
</p>
<hr>
<strong>Lista de atividades:</strong>
<div>
 	<%= f.fields_for :ordemmusculotreinos do |o| %>	
    	<p>
        	<%= o.fields_for :musculo do |m| %>
	        	<%= m.label :nome, m.object.nome%>       	
	        	<p>
	        		<%= o.label "Ordem:" %>
	        		<%= o.text_field :ordem %>
	        	</p>
	        	<%= m.fields_for :atividades do |a| %>
					<%= check_box_tag 'treino[atividade_ids][]', a.object.id, seekAtividade(a.object) %>
            		<%= a.label :nome, a.object.nome %>
            		<br>
   	        	<%end %>			 
        	<%end%>
        	<br>
    	</p>
	<% end %>
</div>
<hr>
<div class="actions">
	<%= f.submit %>
</div>
<hr>
<% end %>