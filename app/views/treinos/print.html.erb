<%- model_class = Aluno -%>
<%= form_for @aluno, :html => { :class => 'form-horizontal' } do |f| %>

<div class="control-group">
	<p class="control-label">Cód.Aluno</p>
	<div class="controls">
		<%= f.text_field :idAcademia, :id=>'only_number', :alt=>"idAcademia", :onkeypress=> onlyTextNumber %>
	</div>
</div>

<div class="form-actions">
	<!--%= f.submit nil, :class => 'btn btn-primary' %-->
	<%= link_to t('.cancel', :default => t("helpers.links.cancel")), alunos_path, :class => 'btn btn-warning' %>
</div>

<%= grid(@alunos_grid, 
	allow_showing_all_records:  false,
	show_filters: :when_filtered) do |g|
	
	g.column name:  'Cód.Aluno', attribute: 'idAcademia' do |aluno|
		aluno.idAcademia
	end
	
	g.column name:  'Nome', attribute: 'nome'  do |aluno|
		aluno.nome
	end

	g.column   do |aluno|
		link_to( image_tag("btnOperation/form_show.png", :alt => "Visualizar") , aluno)
	end
	
	g.column   do |aluno|
		link_to(image_tag("btnOperation/form_edit.png", :alt => "Alterar."), edit_aluno_path(aluno))
	end
end %>


<% end %>