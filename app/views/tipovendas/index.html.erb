<%- model_class = Tipovenda -%>

<%= grid(@tipovendas_grid,
	allow_showing_all_records:  false,
	show_filters: :when_filtered) do |g|

	#
	g.column name:  'Tipo da Venda', attribute: 'nome' do |tipoVenda|
		tipoVenda.nome
	end

  #
	g.column   do |tipoVenda|
		link_to(image_tag("btnOperation/form_show.png", :alt => "Visualizar") , tipoVenda)
	end
  #
	g.column   do |tipoVenda|
		link_to(image_tag("btnOperation/form_edit.png", :alt => "Alterar."), edit_tipovenda_path(tipoVenda))
	end
  #
	g.column   do |tipoVenda|
		link_to image_tag("btnOperation/form_delete.png", :alt => "Excluir."),tipoVenda,
						  method: :delete, data: { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Are you sure?')) }
	end

end %>
<%=link_to('Novo tipo de venda', new_tipovenda_path,:class => 'btn btn-primary'  )%>
