<%- model_class = Formapagamento -%>

<%= grid(@formapagamentos_grid,
	allow_showing_all_records:  false,
	show_filters: :when_filtered) do |g|

	#
	g.column name:  'Forma pagamento', attribute: 'nome' do |formaPagamento|
		formaPagamento.nome
	end

  #
	g.column   do |formaPagamento|
		link_to(image_tag("btnOperation/form_show.png", :alt => "Visualizar") , formaPagamento)
	end
  #
	g.column   do |formaPagamento|
		link_to(image_tag("btnOperation/form_edit.png", :alt => "Alterar."), edit_formapagamento_path(formaPagamento))
	end
  #
	g.column   do |formaPagamento|
		link_to image_tag("btnOperation/form_delete.png", :alt => "Excluir."),formaPagamento,
						  method: :delete, data: { :confirm => t('.confirm', :default => t("helpers.links.confirmdelete", :default => 'Are you sure?')) }
	end

end %>
<%=link_to('Nova forma de pagamento', new_formapagamento_path,:class => 'btn btn-primary'  )%>
